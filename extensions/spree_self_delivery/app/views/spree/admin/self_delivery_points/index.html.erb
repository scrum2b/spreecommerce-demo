<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= t(:self_delivery_points) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to t(:new_self_delivery_point), new_object_url,  :icon => 'icon-plus', :id => 'admin_new_self_delivery_point_link' %>
  </li>
<% end %>

<table class="index sortable" id='listing_self_delivery_points' data-sortable-link="<%= update_positions_admin_self_delivery_points_url %>">
  <colgroup>
    <col style="width: 5%">
    <col style="width: 80%">
    <col style="width: 15%">
  </colgroup>
  <tbody>
    <% @self_delivery_points.each do |point|%>
      <tr id="<%= spree_dom_id point %>" data-hook="admin_self_delivery_points_index_rows">
        <td class="no-border">
            <span class="handle"></span>
          </td>
        <td><%= point.full_address %></td>
        <td class="actions" data-hook="admin_self_delivery_points_index_row_actions">
          <%= link_to_with_icon 'icon-edit', t(:edit), edit_admin_self_delivery_point_url(point), :no_text => true, :data => {:action => 'edit'} %>
          <%= link_to_delete point, {:url => admin_self_delivery_point_url(point), :no_text => true }%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
